<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
    android:background="@drawable/img1"
android:orientation="vertical"
android:weightSum="20">

<LinearLayout
    android:id="@+id/songdets"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/rounded_borders_black"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Song Title"
        android:textColor="@color/colorWhite"
        android:textSize="25dp"

        android:typeface="sans" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Artist Name"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />
</LinearLayout>

    <RelativeLayout
        android:id="@+id/albumartarea"
        android:layout_width="320dp"
        android:background="@drawable/rounded_borders_black"
        android:layout_height="320dp"
        android:layout_below="@+id/songdets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

    <ImageView
        android:id="@+id/albumart"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/Default_play_Orange_2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

       </RelativeLayout>


   <RelativeLayout
        android:layout_width="match_parent"
       android:paddingLeft="42dp"
       android:paddingRight="42dp"
        android:layout_height="100dp"
       android:id="@+id/relativeLayout"
       android:background="@drawable/rounded_borders_black"
       android:layout_marginTop="36dp"
       android:layout_below="@+id/albumartarea"
       android:layout_alignParentStart="true">

       <RelativeLayout
           android:id="@+id/backward"
           android:layout_width="100dp"
           android:padding="10dp"
           android:layout_height="fill_parent"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:background="@drawable/BackOrange"
               android:layout_alignParentTop="true" />


       </RelativeLayout>
       <RelativeLayout
           android:id="@+id/Play"
           android:layout_width="100dp"
           android:layout_height="fill_parent"
           android:layout_centerInParent="true"
           android:layout_toEndOf="@+id/backward">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="fill_parent"

           android:background="@drawable/PlayOrange"
           android:layout_alignParentTop="true"
           android:layout_alignParentStart="true" />


   </RelativeLayout>
       <RelativeLayout
           android:id="@+id/Next"
           android:layout_width="100dp"
           android:padding="10dp"
           android:layout_height="fill_parent"
           android:layout_toRightOf="@id/Play"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="fill_parent"
               android:background="@drawable/OrangeFF"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true" />
       </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>


