<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_op3"
    android:orientation="vertical"
    tools:context="com.example.phili.rip_mobile.musicexplorer"
    android:weightSum="1">

    <SearchView
        android:id="@+id/searchsong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_borders_white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/listheader"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/border"
        android:textColor="@color/colorWhite"
        android:padding="8dp"
        android:textSize="21sp"
        android:text="Album/Artist/All Songs/Playlist name"
        android:layout_below="@+id/searchsong"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/listcontainer"
        android:layout_below="@id/listheader"

        android:layout_width="match_parent"
        android:layout_height="470dp">

       <ListView
         android:id="@+id/listsongs"
           android:layout_width="match_parent"
           android:layout_height="fill_parent"
           android:background="@drawable/rounded_borders_black"
           android:layout_margin="10dp"
           android:divider="@drawable/border"
           android:dividerHeight="2dp"
           >

       </ListView>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/musicplayermin"

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:layout_below="@+id/listcontainer"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/currentplayingimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/defaultsong"
            android:layout_marginStart="21dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/artistmin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Artist"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@+id/currentplayingimg"
            android:layout_toEndOf="@+id/currentplayingimg" />
        <TextView
            android:id="@+id/songmin"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="Song"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/currentplayingimg"
            android:layout_below="@id/artistmin"/>

        <ImageView
            android:id="@+id/backmin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backwards"
            android:layout_alignTop="@+id/playmini"
            android:layout_toStartOf="@+id/playmini" />
        <ImageView
            android:id="@+id/playmini"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/play"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageView5" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/forward"

            android:id="@+id/imageView5"
            android:layout_marginEnd="36dp"
            android:layout_alignTop="@+id/playmini"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
