<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/menuheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:background="@drawable/border"
        app:itemTextColor="@color/colorWhite"
        app:itemIconTint="#FFA500"
        android:layout_gravity ="start">

    </android.support.design.widget.NavigationView>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_op3"
        android:orientation="vertical"
        tools:context="com.example.phili.rip_mobile.musicexplorer"
        android:weightSum="1">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_borders_black"
            android:drawableStart="@drawable/moneybag"
            android:enabled="false"
            android:inputType="number"
            android:paddingEnd="9dp"
            android:paddingStart="5dp"
            android:text="100000"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/searchsong"
            android:layout_marginEnd="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="7dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="7dp"
            app:layout_constraintTop_toTopOf="@+id/searchsong"
            app:layout_constraintLeft_toRightOf="@+id/searchsong"
            app:layout_constraintVertical_bias="1.0" />

        <SearchView
            android:id="@+id/searchsong"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_borders_white"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="3dp"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="3dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.0" />


        <RelativeLayout
            android:id="@+id/gridcontainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/searchsong"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/musicplayermin"
            android:layout_marginRight="1dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="1dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toBottomOf="@+id/searchsong">

            <TabHost
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_borders_black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_borders_white"
                        android:orientation="horizontal"
                        android:showDividers="none"
                        android:tabStripEnabled="false" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <GridView
                            android:id="@+id/albumsgrid"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="5dp"
                            android:numColumns="3"
                            android:scrollbars="horizontal"
                            android:verticalSpacing="10dp"
                            android:visibility="visible">

                        </GridView>

                        <GridView
                            android:id="@+id/artistsgrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="10dp"
                            android:numColumns="3"
                            android:scrollbars="horizontal"
                            android:verticalSpacing="10dp"></GridView>

                        <GridView
                            android:id="@+id/genresgrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="10dp"
                            android:numColumns="3"
                            android:scrollbars="horizontal"
                            android:verticalSpacing="10dp">

                        </GridView>

                        <GridView
                            android:id="@+id/songsgrid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="10dp"
                            android:numColumns="3"
                            android:scrollbars="horizontal"
                            android:verticalSpacing="10dp"
                            android:visibility="visible"></GridView>


                    </FrameLayout>
                </LinearLayout>
            </TabHost>


        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/musicplayermin"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gridcontainer"
            android:layout_margin="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginBottom="6dp">

            <ImageView
                android:id="@+id/currentplayingimg"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:background="@drawable/defaultsong"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/artistmin"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:text="Artist"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:layout_alignTop="@+id/backmin"
                android:layout_toEndOf="@+id/currentplayingimg"
                app:layout_constraintBottom_toTopOf="@+id/songmin"
                app:layout_constraintHorizontal_bias="1.0"
                tools:layout_constraintRight_creator="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@+id/currentplayingimg"
                app:layout_constraintRight_toLeftOf="@+id/backmin" />

            <TextView
                android:id="@+id/songmin"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_below="@id/artistmin"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/currentplayingimg"
                android:text="Song"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:layout_constraintRight_toLeftOf="@+id/backmin"
                android:layout_marginRight="9dp"
                app:layout_constraintLeft_toRightOf="@+id/currentplayingimg"
                android:layout_marginLeft="5dp"
                app:layout_constraintHorizontal_bias="0.0"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="9dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintTop_toTopOf="@+id/artistmin"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/backmin"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:layout_alignTop="@+id/playmini"
                android:layout_toStartOf="@+id/playmini"
                android:background="@drawable/backwards"
                app:layout_constraintRight_toLeftOf="@+id/playmini"
                android:layout_marginRight="0dp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/playmini"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imageView5"
                android:background="@drawable/play"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="@+id/imageView5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"

                android:layout_height="0dp"

                android:background="@drawable/forward"
                android:layout_alignTop="@+id/playmini"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="6dp"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.DrawerLayout>
