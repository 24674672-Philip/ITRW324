<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout01"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_musicplayer"
    android:orientation="vertical"
    android:weightSum="20"

    >

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:background="@drawable/border"
        android:layout_height="16dp"
        android:progressDrawable="@drawable/style"
        android:progress="50"
        android:thumb="@drawable/thumb"
        android:layout_below="@+id/albumartarea"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/albumartarea"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/songdets"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/txtSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Song Title"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"

            android:typeface="sans" />

        <TextView
            android:id="@+id/txtArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Artist Name"
            android:layout_margin="1dp"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/seekBar"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/rounded_borders_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <ImageButton
            android:id="@+id/backwards"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/fastforward"
            android:layout_toStartOf="@+id/play2"
            android:background="@drawable/btn_backward" />


        <ImageButton
            android:id="@+id/play2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_play" />


        <ImageButton
            android:id="@+id/fastforward"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/play2"
            android:background="@drawable/btn_forward"
            android:padding="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/albumartarea"
        android:layout_width="0dp"
        android:layout_height="321dp"
        android:layout_below="@+id/songdets"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_borders_black"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/songdets">

        <ImageView
            android:id="@+id/albumart"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/img_default_song" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_playlist"
            android:layout_below="@+id/albumart"
            android:layout_alignEnd="@+id/albumart" />

        <TextView
            android:id="@+id/timeBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:text="00:00/00:00"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>


